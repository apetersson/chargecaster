{
  "name": "chargecaster-backend",
  "version": "0.1.0",
  "private": true,
  "license": "UNLICENSED",
  "type": "module",
  "scripts": {
    "backend:dev": "tsx watch src/main.ts",
    "backend:dev:api": "SERVE_STATIC=false tsx watch src/main.ts",
    "start": "tsx src/main.ts",
    "start:api": "SERVE_STATIC=false tsx src/main.ts",
    "bundle": "esbuild src/main.ts --platform=node --target=node20 --format=cjs --bundle --alias:@chargecaster/domain=../packages/domain/dist/index.js --external:better-sqlite3 --external:@nestjs/websockets/socket-module --external:@nestjs/microservices/microservices-module --external:@nestjs/microservices --external:@nestjs/platform-express --external:@fastify/view --external:class-validator --external:class-transformer --outfile=dist-bundle/index.js",
    "lint": "eslint \"src/**/*.ts\" \"test/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "build": "tsc -p tsconfig.build.json",
    "test": "vitest run",
    "test:e2e": "vitest run test/e2e"
  },
  "dependencies": {
    "@chargecaster/domain": "file:../packages/domain",
    "@fastify/static": "^7.0.4",
    "@fastify/cors": "^10.0.1",
    "@nestjs/common": "^11.0.0",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-fastify": "^11.0.0",
    "@trpc/server": "^11.0.0",
    "better-sqlite3": "^11.7.0",
    "fastify": "^4.28.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "yaml": "^2.6.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "esbuild": "^0.23.0",
    "@trpc/client": "^11.0.0",
    "@types/better-sqlite3": "^7.6.9",
    "@types/node": "^22.5.2",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "globals": "^15.9.0",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.5",
    "typescript": "^5.6.2",
    "vitest": "^1.6.1"
  }
}
